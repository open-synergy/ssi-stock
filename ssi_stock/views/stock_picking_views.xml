<odoo>
<record id="stock_picking_view_search" model="ir.ui.view">
    <field name="name">stock.picking - search</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_internal_search" />
    <field name="mode">extension</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="picking_type_category_id" />
            </xpath>
            <xpath expr="//filter[@name='picking_type']" position="after">
                <filter
                        name="grp_picking_type_category_id"
                        string="Operation Type Category"
                        context="{'group_by': 'picking_type_category_id'}"
                    />
            </xpath>
        </data>
    </field>
</record>

<record id="stock_picking_view_tree" model="ir.ui.view">
    <field name="name">stock.picking - tree</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.vpicktree" />
    <field name="mode">extension</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='picking_type_id']" position="before">
                <field name="picking_type_category_id" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="date_backdating" optional="hide" />
                <field name="date_done" />
            </xpath>
        </data>
    </field>
</record>

<record id="stock_picking_view_form" model="ir.ui.view">
    <field name="name">stock.picking - form</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form" />
    <field name="mode">extension</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//button[@name='action_confirm']" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible': [('confirm_ok', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_assign']" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible': [('assign_ok', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='button_validate'][1]" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible': [('validate_ok', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='button_validate'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//widget[@name='signature'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//widget[@name='signature'][2]" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible': [('signature_ok', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='do_print_picking']" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible': [('print_picking_ok', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='%(stock.action_report_delivery)d']" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible': [('print_delivery_ok', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='%(stock.act_stock_return_picking)d']" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible': [('return_ok', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='do_unreserve']" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible': [('unreserve_ok', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='button_scrap']" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible': [('scrap_ok', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_toggle_is_locked'][1]" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible': [('lock_ok', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_toggle_is_locked'][2]" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible': [('unlock_ok', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible': [('cancel_ok', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button
                        name="action_draft"
                        type="object"
                        string="Set to Draft"
                        attrs="{'invisible': [('draft_ok', '!=', True)]}"
                    />
            </xpath>
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="picking_type_category_id" invisible="1" />
                <field
                        name="allowed_source_location_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <field
                        name="allowed_destination_location_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                    <field
                        name="allowed_product_category_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                    <field
                        name="allowed_product_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <field name="show_price_unit" invisible="1" />
                <field name="show_procure_method" invisible="1" />

            </xpath>
            <xpath expr="//field[@name='picking_type_id']" position="attributes">
                <attribute
                        name="domain"
                    >[('category_id','=',picking_type_category_id)]</attribute>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute
                        name="domain"
                    >[('id','in',allowed_source_location_ids)]</attribute>
                <attribute name="attrs">{}</attribute>
            </xpath>
            <xpath expr="//field[@name='location_dest_id']" position="attributes">
                <attribute
                        name="domain"
                    >[('id','in',allowed_destination_location_ids)]</attribute>
                <attribute name="attrs">{}</attribute>
            </xpath>
            <xpath
                    expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom_qty']"
                    position="before"
                >
                <field
                        name="price_unit"
                        attrs="{'column_invisible':[('parent.show_price_unit','=',False)]}"
                    />
                <field
                        name="procure_method"
                        attrs="{'column_invisible':[('parent.show_procure_method','=',False)]}"
                    />
            </xpath>
            <xpath
                    expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                    position="attributes"
                >
                <attribute
                        name="domain"
                    >['|',('id','in',parent.allowed_product_ids),('categ_id','child_of',parent.allowed_product_category_ids)]</attribute>
            </xpath>
            <xpath
                    expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                    position="after"
                >
                <field name="forced_lot_id" />
            </xpath>
            <xpath expr="//page[@name='operations']" position="after">
                <page name="policy" string="Policies" groups="base.group_system">
                    <group name="policy_1" colspan="4" col="2">
                        <field name="policy_template_id" />
                        <button
                                name="action_reload_policy_template"
                                type="object"
                                string="Reload Template Policy"
                                class="oe_highlight"
                                icon="fa-refresh"
                            />
                    </group>
                    <group name="policy_2" colspan="4" col="2">
                        <field name="confirm_ok" />
                        <field name="assign_ok" />
                        <field name="validate_ok" />
                        <field name="signature_ok" />
                        <field name="print_picking_ok" />
                        <field name="print_delivery_ok" />
                        <field name="return_ok" />
                        <field name="unreserve_ok" />
                        <field name="scrap_ok" />
                        <field name="lock_ok" />
                        <field name="unlock_ok" />
                        <field name="cancel_ok" />
                        <field name="draft_ok" />
                    </group>
                </page>
            </xpath>

        </data>
    </field>
</record>



</odoo>
